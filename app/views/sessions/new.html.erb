
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 text-center">
        <form action="/session" method="POST" class="user-form">
          <div id = "user-form-content">
            <%= auth_token %><br>
            <div id="login-title">FIND YOUR PERFECT WORKSPACE</div>
            <br>
            <div style="color: red"> <%= @errors %> </div><br>
            <div class = "form-group">
              <input type="text" class="input-large" name="user[email]" placeholder="Email" value="<%= @user.email %>">
            </div>

            <div class = "form-group">
              <input type="password" class="input-large" name="user[password]" placeholder = "Password" value="<%= @user.password %>">
            </div>
            <a style="color:white" href="/users/new"> New to Workspace? </a>
            <br><br>
            <button type="submit" class="btn btn-default" id="login">LOGIN</button>
            <form action="/session" method="POST" class="user-form">
              <%= auth_token %>
              <input type="hidden" name="user[email]" placeholder="Email" value="guest@guest.com">
              <input type="hidden" name="user[password]" placeholder = "Password" value="password">
              <button type="submit" class="btn btn-default" id="guest-login">GUEST LOGIN</button><br><br>
            </form>
            <br>
          </div>
        </form>

      </div>
    </div>
  </div>
