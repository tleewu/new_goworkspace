  <div class="container" style="color: red;">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 text-center">
        <form action="/users" method="POST" class="user-form">
          <div id = "user-form-content">

            <%= auth_token %><br>
            <h3 style="letter-spacing: 5px"> <b> SIGN UP </b> </h3> <br>

            <% if @user.errors.full_messages.length > 0 %>
              <% @user.errors.full_messages.each do |message| %>
                <div style="color:red"> <%= message %> </div>
              <% end %>
              <br>
            <% end %>

            <div class = "form-group">
              <input type="text" name="user[email]" class="input-large" placeholder="Email:" value= "<%= @user.email %>">
            </div>

            <div class = "form-group">
              <input type="text" class="input-large" name="user[first_name]" placeholder="First Name:" value= "<%= @user.first_name %>">
              <input type="text" class="input-large" name="user[last_name]" placeholder="Last Name:" value= "<%= @user.last_name %>">
            </div>

            <div class = "form-group">
              <input type="text" class="input-large" name="user[location]" placeholder="Location:" value= "<%= @user.location %>">
            </div>

            <div class = "form-group">
              <input type="password" class="input-large" name="user[password]" placeholder="Enter a password: " value= "<%= @user.password %>">
            </div>

            <div class = "form-group">
              <input type="text" id="opener" name="user[profile_image_url]" placeholder="Profile Pic" value= "<%= @user.profile_image_url %>">
            </div>

            <button type="submit" class="btn btn-default">Register</button><br><br>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>

  <script type="text/javascript">
    $('#opener').cloudinary_upload_widget(
      { cloud_name: 'goworkspace', upload_preset: 'l3scxvxg',
        theme: 'minimal', cropping: 'server', 'folder': 'user_photos' },
      function(error, result) {
          document.getElementById('opener').value = result[0].secure_url;
      }
    });
  </script>
